    <!-- footer code -->
    {{>footer}}
    <script src="js/main.js"></script>

    <script>

        const getCurrentDay = () => {
            var weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thrusday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let idate = new Date();
            days = weekday[idate.getDay()];
            let day = document.getElementById('day');
            day.innerText = days;

        };
        getCurrentDay();


        function updateClock() {
            const date = new Date();
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            const seconds = String(date.getSeconds()).padStart(2, '0');
            const clockDisplay = `${hours}:${minutes}:${seconds}`;
            document.getElementById('today_date').innerText = `${date.getDate()}/${date.getMonth() + 1}/${date.getFullYear()}  ${clockDisplay}`;
        };
        setInterval(updateClock, 1000);
        updateClock();
    </script>
</body>
</html>